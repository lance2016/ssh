<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
   <constant name="struts.objectFactory" value="spring" />
   <package name="book"  extends="struts-default">
   	<global-results>
   	     <result name="updatesuccess" type="redirectAction">user_query</result>
		 <result name="error" >/error.jsp</result>
	</global-results>  
	 
	<action name="init" class="initAction" method="initindex">
		   <result name="querysuccess">/front/index.jsp</result>	 
	</action>
     <action name="book_*" class="bookAction"  method="{1}" >
       <result name="querysuccess">/index.jsp</result>	    
     </action>
     <action name="nav_*" class="navAction"  method="{1}" >
       <result name="querysuccess">/front/index.jsp</result>	    
     </action>
      <action name="user_*" class="userAction"  method="{1}" >
       <result name="querysuccess">/front/index.jsp</result>	    
     </action>
     
      <action name="xue_*" class="xueYuanNewsAction"  method="{1}" >
       <result name="querysuccess">/front/index.jsp</result>	    
     </action>
    </package> 
</struts> 